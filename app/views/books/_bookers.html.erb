<div class="profile">
    <h1>User info</h1>
    <div class="row">
      <div>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
    </div>
      <table>
        <tr>
          <th>name</th>
          <th>
            <%= user.name %>
          </th>
        </tr>
        <tr>
          <td>introduction</td>
          <td>
            <%= user.introduction %>
          </td>
        </tr>
      </table>
        <%= link_to "", edit_user_path(user), class: "glyphicon glyphicon-wrench btn btn-default col-xs-9"%>
       </div>
             <div class="new">
                <h3>New book</h3>
                <% if book.errors.any? %>
                   <p>errors</p>
                  <div class="alert-warning">
                    <ul>
                      <% book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                  <%= form_for(book) do |f| %>
                    <h4>Title</h4>
                      <%= f.text_field :title %>
                    <h4>Opinio</h4>
                      <%= f.text_area :body %>
                     <br>
                      <%= f.submit 'Create Book' %>
                  <% end %>
            </div>
    </div>


