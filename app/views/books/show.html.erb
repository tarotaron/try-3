 <div class="notice">
     <%= flash[:notice] %>
 </div>
 <div class="container">
    <div class="row">
        <div class="col-xs-3" >
             <%= render 'books/bookers', book: @book ,user: @user%>
        </div>
            <div class="col-xs-9">
              <div class="row">
            	 	<h1>Book detail</h1>
                     <table class="table">
                           <tr>
                            <td>
                              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %><br>
                              <%= link_to @user.name ,user_path(@user) %>
                            </td>
                            <td>
                              <%= link_to @book.title ,book_path(@book.id) %>
                            </td>
                            <td>
                              <%= @book.body %>
                            </td>
                            <td>
                                <% if @book.favorited_by?(current_user) %>
                                  <%= link_to book_favorites_path(@book), method: :delete do %>
                                  <i class="far fa-heart" aria-hidden="true" style="color: red;"></i>
                                  <% end %>
                                  <%= @book.favorites.count %>
                                <% else %>
                                  <%= link_to book_favorites_path(@book), method: :post do %>
                                  <i class="far fa-heart" aria-hidden="true"></i>
                                  <% end %>
                                  <%= @book.favorites.count %>
                                <% end %>
                            </td>
                            <td>
                              コメント数:<%= @book.book_comments.count %>
                            </td>
                            <% if @book.user_id == @users.id %>
                            <td>
                              <%= link_to "Edit", edit_book_path(@book) %>
                            </td>
                            <td>
                              <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '削除しますか？' }  %>
                            </td>
                            <% end %>
                          </tr>
                        </table>
              </div>
              <div class="row">
                <%= form_for [@book, @book_comment] do |f| %>
                  <%= f.text_area :comment, class:"form-control", rows:'5', placeholder: "コメント" %>
                  <%= f.submit '送信', class: "btn btn-lg btn btn-default  pull-right" %>
                <% end %>
              </div>
              <div class="row">
                <h1>Book comments</h1>
                <table class="table">
                   <% @book.book_comments.each do |comment| %>
                   <tr>
                    <td>
                      <%= comment.user.name %>
                    </td>
                    <td>
                      <%= comment.comment %>
                    </td>
                    <% if comment.user_id == current_user.id %>
                    <td>
                      <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '削除しますか？' }, class:"btn btn-danger" %>
                    </td>
                    <% end %>
                   </tr>
                   <% end %>
                </table>
            </div>
      </div>
  </div>